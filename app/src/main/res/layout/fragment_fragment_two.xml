<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="20dp"
              tools:context=".fragment.FragmentTwo">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

        <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/util_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:entries="@array/utilList"/>

        <Button
                android:id="@+id/util_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:background="@drawable/button_radius"
                android:textColor="@color/colorAccent"
                android:onClick="onClickUtil"
                android:text="Send"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/param_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:background="@color/colorBackParam"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="FORMAT"/>

            <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/format_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:entries="@array/formatList"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TYPE"/>

            <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/type_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:entries="@array/typeList"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/body_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:background="@color/colorBackParam"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="PATH"/>

            <android.support.design.widget.TextInputEditText
                    android:id="@+id/path_editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/formatList"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="METHOD"/>

            <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/method_spinner_util"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:entries="@array/httpMethodList"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
            android:id="@+id/json_textView_response"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="15"
            android:singleLine="false"
            android:scrollHorizontally="true"/>

</LinearLayout>